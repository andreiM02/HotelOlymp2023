@model List<Reservation>
<p>User Id : @ViewData["UserID"]</p>
<h1>My Reservations</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Camera ID</th>
                <th>Check-In Date</th>
                <th>Check-Out Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.Id</td>
                    <td>@reservation.CameraId</td>
                    <td>@reservation.CheckInDate</td>
                    <td>@reservation.CheckOutDate</td>
                    <td>
                        <form asp-controller="Reservations" asp-action="DeleteConfirmed2" method="post">
                            @Html.AntiForgeryToken() <!-- Add AntiForgeryToken to prevent CSRF attacks -->
                            <input type="hidden" name="reservationId" value="@reservation.Id" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No reservations found.</p>
}
